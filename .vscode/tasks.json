{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/CanvasGame.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "gulp-watch",
            "isBackground": true,
            "command": "npx gulp watch",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "promptOnClose": false,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$gulp-tsc",
                "$tsc"
            ]
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "Run firefox Debugging server",
            "type": "process",
            "command": "C:\\Program Files\\Firefox Developer Edition\\firefox.exe",
            "args": [
                "-start-debugger-server"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        }
    ]
}