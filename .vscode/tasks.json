{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/CanvasGame.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "gulp-watch",
            "isBackground": true,
            "command": "npx gulp watch",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "promptOnClose": false,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$gulp-tsc",
                "$tsc"
            ]
        }
    ]
}