extends layout/head

append script
  script(src='/js/game.js')

append style
  link(rel='stylesheet', href='/index.css')

block body
  canvas#game-canvas.img-fluid
  svg#matrix-provider(style='display:none')
  div#pause-indicator
    div.row
      div.col-md-10.col-sm-8
      div.col-md-2.col-sm-4.level-selector.card.card-body.unselectable
        h2.card-title Canvas Game
        h4.card-subtitle Paused
        hr
        h5.card-text Levels
        ul.list-group.list-group-flush#level-selector
        h5.card-text.btn.btn-indigo#level-editor-toggle(data-toggle="button", aria-pressed="false", autocomplete="off") Level Editor
        div.card-body#level-editor-menu(style='display:none')
          h4 Level Editor menu (WIP)
          hr