<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <Target Name="NpmRestore" BeforeTargets="BeforeBuild">
    <Message Text="Installing NPM packages..." Importance="high"></Message>
    <Exec Command="npm install" />
  </Target>

  <Target Name="CompileTypescript" BeforeTargets="BeforeBuild">
    <Message Text="Compiling Typescript..." Importance="high"></Message>
    <Exec Command="npx tsc"/>
  </Target>

  <Target Name="GulpTask" BeforeTargets="BeforeBuild">
    <Message Text="Running gulp tasks..." Importance="high"></Message>
    <Exec Command="npx gulp" />
  </Target>

</Project>
